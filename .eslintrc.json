{
    "extends": "eslint:recommended",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true,
        "browser": true,
        "jquery": true
    },
    "rules": {
        "semi": [2, "always"],
        "quotes": [2, "single"],
        "no-unused-vars": [2, {"argsIgnorePattern": "next"}]
    }
}
